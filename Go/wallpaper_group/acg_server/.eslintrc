{
  "extends": "eslint-config-egg",
  "env": {
    "mocha": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": [
        "error",
        4,
      {
        "SwitchCase": 1
      }
    ],
             // 使用单引号
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ],
    "comma-dangle": [
        0,
        "never"
    ],
    "eol-last": 0,
    "linebreak-style": [
        "error",
        "unix"
    ],
    "no-unused-vars": [
        2,
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false
      }
    ],
    "no-console": 2,
    "spaced-comment": 2,
    "no-trailing-spaces": 2,
    "no-use-before-define": 2,
    "no-undef": 2,
    "no-redeclare": 2,
    "no-multi-spaces": 1,
    "space-before-function-paren": [
        "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "newline-per-chained-call": [
        "error",
      {
        "ignoreChainWithDepth": 4
      }
    ],
   // "node/no-deprecated-api": 1,
    "camelcase": [
        "error",
      {
        "properties": "never",
        "ignoreDestructuring": true
      }
    ],
    "prefer-promise-reject-errors": 1
  }
}
